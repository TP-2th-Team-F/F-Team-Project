{{>layout/header}}
<h1>Posts' List</h1>
<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class ="form-group">
                <label for="title">TITLE</label>
                <input type="text" class="form-control" id="title" placeholder="Write your title">
            </div>
            <div class="form-group">
                <label for="author">WRITER</label>
                <input type="text" class="form-control" id="author" placeholder="Write the writer">
            </div>
            <div class="form-group">
                <label for="content">CONTENT</label>
                <input type="text" class="form-control" id="content" placeholder="Write down here's content">
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">CANCEL</a>
        <button type="button" class="btn btn-primary" id="btn-save">SAVE</button>
    </div>
</div>
{{>layout/footer}}